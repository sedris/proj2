<h1>Registered Users</h1>
<table class="table">
  <tr>
    <th>Username</th>
    <th>Type</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.type %></td>
    <td>
      <% if user.is_a?(Shopkeeper)%>
      <%= link_to 'View Shop', shopkeeper_items_path(user.id) %>
      <% end %>
    </td>
    <% if current_user == user %>
      <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger"  %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />