<h1>Listing <%= @shopkeeper.username %>'s Items</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td>$<%= item.price %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%=button_to "add to cart", add_to_cart_path(item: item.id, shopkeeper_id: @shopkeeper.id)%></td>
  </tr>
<% end %>
</table>

<br />

