<h2><%= current_user.username %>'s cart</h2>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td>$<%= item.price %></td>
    <td><%=button_to "Remove from Cart", remove_from_cart_path(item: item.id), :class => "btn btn-small btn-danger"%></td>
  </tr>
<% end %>
</table>

<br />
<%=button_to "Save Cart for Later", add_cart_path(cart: @cart.id), :class => "btn btn-small btn-primary", :disable_with => "Please wait..."%>
<%=button_to "Checkout", orders_path, :class => "btn btn-small btn-primary", :disable_with => "Please wait..."%>